const mongoose = require('mongoose');
const Schema = mongoose.Schema;


// Create Schema
const ProfileSchema = new Schema({
	user:{
		type: Schema.Types.ObjectId,
		ref:'user'
	},
	handle:{ // the | url.com/'handle' |
		type: String,
		required: true,
		max: 40
	}
	
});

module.exports = Profile = mongoose.model("profile", ProfileSchema);
