import { createStore, applyMiddleware } from 'redux';
import thunk from 'redux-thunk'; //used for ajax call backs or something like that

import rootReducer from './util/reducers'; //don't need 'index.js' due to naming. It auto looks for 'index.js' (think it's a html thing. Look into it. just saw something on the udemy html css course about it)



const initialState = {};
const middleware = [thunk];


//const store = createStore(root reduce, initState, enhancer); 
//const store = createStore(()=>[], {}, applyMiddleware(...middleware)); //... aka spread operator 
const store = createStore(rootReducer, initialState, applyMiddleware(...middleware)); 

export default store;