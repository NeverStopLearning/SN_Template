import React, { Component } from 'react';
import cn from 'classnames';
import propTypes from 'prop-types';


const TextFieldGroup = ({
	//when using a functional based component that accepts properties
	name,
	placeholder,
	value,
	label,
	error,
	info,
	type,
	onChange,
	disabled
	
}) => {
		return(
				<div className="form-group">
	              <input type={type} className={cn('form-control form-control-lg', { 'is-invalid': error })} placeholder={placeholder} name={name} value={value} onChange={onChange}/>
	              {error && (<div className= 'invalid-feedback'>{info}</div>)}
	            </div>
		)
}

export default TextFieldGroup;