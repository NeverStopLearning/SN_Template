 function isEmpty(value){
	 console.log('value - ',value);
	 console.log('1',value === undefined );
	 console.log('2',value === null);
	 console.log('3',(typeof value === 'object' && Object.keys(value) === 0));
	 console.log('4',(typeof value === 'string' && value.trim().length === 0));
	 
	 
	return(
			value === undefined ||
			value === null ||
			(typeof value === 'object' && Object.keys(value) === 0) ||
			(typeof value === 'string' && value.trim().length === 0)
	);
}
			
module.exports = isEmpty;	
			
			
